---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Accommodation | West Burton" description="Places to stay in West Burton" />
	</head>
	<body>
		<Header />
		<main>
			<h1>Places to Stay</h1>
			
			<div class="features">
				<div class="feature">
					<h2>Holiday Cottages</h2>
					<p>
						Choose from a variety of traditional Yorkshire stone cottages, perfect for families
						and groups.
					</p>
				</div>
				
				<div class="feature">
					<h2>B&Bs</h2>
					<p>
						Experience Yorkshire hospitality in one of our local bed & breakfast establishments.
					</p>
				</div>
				
				<div class="feature">
					<h2>Camping</h2>
					<p>
						Several camping and caravan sites available in and around the village.
					</p>
				</div>
			</div>

			<section class="contact-info">
				<h2>Book Your Stay</h2>
				<p>
					For booking inquiries, please contact individual establishments directly or visit our
					contact page for more information.
				</p>
				<p class="cta">
					<a href="/contact" class="button">Contact Us</a>
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>